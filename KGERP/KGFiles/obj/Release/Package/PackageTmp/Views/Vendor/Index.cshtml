@using PagedList.Mvc;
@model PagedList.IPagedList<KGERP.Service.ServiceModel.VendorModel>
@using PagedList;
@{
    ViewBag.Title = "Index";
    var message = TempData["message"];
}

<style>
    .table > thead > tr > th,
    .table > tbody > tr > th,
    .table > tfoot > tr > th,
    .table > thead > tr > td,
    .table > tbody > tr > td,
    .table > tfoot > tr > td {
        padding: 2px 0px 2px 0px;
    }
</style>
<link href="~/Content/CustomCss/search-form.css" rel="stylesheet" />
<div class="row">
    @using (Html.BeginForm("Index", "Vendor", FormMethod.Get, new { @class = "example" }))
    {
        <div class="col-md-6">
            @if (Request.QueryString["vendorTypeId"] == "2")
            {
                @Html.Label("Customer List", new { @style = "font-size:20px" })
                <div class="btn-group btn-toggle">
                    <a href="@Url.Action("Index", new {companyId=Request.QueryString["companyId"],vendorTypeId=2, isActive = true })" class="btn btn-success active">Active</a>
                    <a href="@Url.Action("Index", new {companyId=Request.QueryString["companyId"], vendorTypeId=2,isActive = false })" class="btn btn-danger active">Inactive</a>
                    <a href="@Url.Action("ZoneWiseCustomer","Report", new { companyId = Request.QueryString["companyId"]})" target="_blank" class="btn btn-primary">
                        Export Customer
                    </a>
                </div>
            }
            else
            {
                @Html.Label("Rent Company List", new { @style = "font-size:20px" })
            }



        </div>
        <div class="col-md-6">
            @Html.Hidden("companyId")
            <input type="hidden" value="@Request.QueryString["isActive"]" name="isActive" />
            <input type="hidden" value="@Request.QueryString["vendorTypeId"]" name="vendorTypeId" />

            @Html.Editor("searchText", new { htmlAttributes = new { @autocomplete = "off", value = "", @placeholder = "Search..", @style = "width:90%" } })
            <button style="width:5%" type="submit"><i class="fa fa-search"></i></button>
            @if (Request.QueryString["vendorTypeId"] == "2")
            {
                <a href="@Url.Action("CreateOrEdit", new { id = 0,vendorTypeId = Request.QueryString["vendorTypeId"]})" class="btn btn-primary pull-right">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add Customer
                </a>
            }
            else
            {
                <a href="@Url.Action("CreateOrEdit", new { id = 0,vendorTypeId = Request.QueryString["vendorTypeId"]})" class="btn btn-primary pull-right">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add Rent Company
                </a>
            }

        </div>
    }
</div>


<div class="row">
    <hr style="border-color:#ff0000; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
    <table class="table table-striped table-responsive">
        <tr style="background-color:#4CAF50;color:#FFFFFF">
            <th>SL</th>
            @if (Request.QueryString["vendorTypeId"].Equals("2"))
            {
                <th>
                    Type
                </th>
            }

            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            @if (Request.QueryString["vendorTypeId"].Equals("3"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.First().ContactName)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.First().Code)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.First().DistrictId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().UpazilaId)
                </th>*@

            <th>
                @Html.DisplayNameFor(model => model.First().Address)
            </th>
            @if (Request.QueryString["vendorTypeId"].Equals("2"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.First().ZoneId)
                </th>
            }

            <th>
                @Html.DisplayNameFor(model => model.First().Phone)
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.First().ZoneId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SubZoneId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.First().IsActive)
            </th>
            <th>
                Report
            </th>
            <th style="text-align:center">
                Action
            </th>
        </tr>

        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td width="5%">
                    @((item.Index + 1) + (Model.PageNumber - 1) * Model.PageSize)
                </td> @if (Request.QueryString["vendorTypeId"].Equals("2"))
                {
                    <td width="5%">
                        @Html.DisplayFor(modelItem => item.Data.CustomerType)
                    </td>
                }

                <td width="20%">
                    @Html.DisplayFor(modelItem => item.Data.Name)
                </td>
                @if (Request.QueryString["vendorTypeId"].Equals("3"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Data.ContactName)
                    </td>
                }
                <td width="10%">
                    @Html.DisplayFor(modelItem => item.Data.Code)
                </td>
                <td width="15%">
                    @Html.DisplayFor(modelItem => item.Data.Address)
                </td>

                @if (Request.QueryString["vendorTypeId"].Equals("2"))
                {
                    <td width="15%">
                        @if (!string.IsNullOrEmpty(item.Data.ZoneName))
                        {
                            @Html.DisplayFor(modelItem => item.Data.ZoneName)
                        }
                        else
                        {
                            <span class="btn btn-danger btn-xs">Not Found</span>
                        }

                    </td>
                }


                <td width="10%">
                    @Html.DisplayFor(modelItem => item.Data.Phone)
                </td>

                <td width="5%" style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Data.IsActive)
                </td>
                <td width="5%" style="text-align:center">
                    <a href="@Url.Action("GetCustomerReport","Report", new { vendorId = item.Data.VendorId, vendorTypeId = item.Data.VendorTypeId,vendorType=item.Data.CustomerType})" target="_blank" class="btn btn-primary btn-xs">
                        Report
                    </a>
                </td>

                @if (Request.QueryString["vendorTypeId"].Equals("2"))
                {
                }

                <td width="10%" style="text-align:center">
                    <a href="@Url.Action("CreateOrEdit", new { id = item.Data.VendorId,vendorTypeId=item.Data.VendorTypeId })" title="Edit" class="btn btn-info btn-xs">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Data.VendorId,vendorTypeId=item.Data.VendorTypeId,isActive=item.Data.IsActive})" onclick="return confirm('Are you sure to delete this record?');" title="Delete" class="btn btn-danger btn-xs">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                    @if (Request.QueryString["vendorTypeId"].Equals("2"))
                    {
                        <a href="@Url.Action("Index","VendorOffer", new { vendorId = item.Data.VendorId,productType='F'})" title="Customer Offer" class="btn btn-primary btn-xs">
                            <i class="fa fa-wrench" aria-hidden="true"></i>
                        </a>
                    }

                </td>
            </tr>
        }
    </table>
    @if (Model.PageCount > 1)
    {
        <span class="btn btn-success" style="margin-top:-10px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </span>
        <span class="checkbox" style="margin-top:-10px">
            @Html.PagedListPager(Model, Page_No => Url.Action("Index", "Vendor",
                                                                                                                                                           new { companyId = Request.QueryString["companyId"], Page_No, searchText = Request.QueryString["searchText"], vendorTypeId = Request.QueryString["vendorTypeId"] }))
        </span>
    }
</div>


@section Scripts {
    <script type="text/javascript">
        var message = '@message';
        if(message){
            alert(message);
        }
    </script>
}