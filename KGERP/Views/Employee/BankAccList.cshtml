@model KGERP.Service.ServiceModel.EmployeeVm
@{
    ViewBag.Title = "AccountList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var sl = 0;
}
<h2>Bank List</h2>

<table id="KgErpDataTable" style="width:100%; background-color:#ddd;" class="table table-striped">
    <thead>
        <tr>
            <th>Serial Number</th>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Designation Name</th>
            <th>Bank Name</th>
            <th>Account Name</th>
            <th>Accounts Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DataList)
        {
          
            <tr>
                <td>@(sl += 1)</td>
                <td>@item.EmployeeId</td>
                <td>@item.EmployeeName</td>
                <td>@item.DesignationName</td>
                <td>@item.BankName</td>
                <td>@item.AccName</td>
                <td>
                  @item.BankAccNum
                </td>
                <td>
                    <a href="/Employee/GetBankAcc?EmpID=@item.Id" target="_blank" class="btn btn-warning btn-xs">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>