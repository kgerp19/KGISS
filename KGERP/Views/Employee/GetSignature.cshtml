@model KGERP.Service.ServiceModel.EmployeeModel
@{
    ViewBag.Title = "GetSignature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SignatureAdd", "Employee", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
  
    <div class="tab-pane" id="tab-6" >
        <div class="panel panel-info" style="padding:15px;">
            <div class="panel-heading" style="background-color:#4CAF50;color:#FFFFFF"><b>Picture</b></div>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CompanyId)
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="row">
                        <div class="">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>
                        <div class="">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Designation, htmlAttributes: new { @class = "control-label " })
                                <div class="">
                                    @Html.EditorFor(model => model.Designation.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="file">Upload Image</label>
                        <input class="btn btn-success" type="file" name="image" id="image" style="width: 100%; " />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @if (!string.IsNullOrEmpty(Model.SignatureFileName))
                        {
                            <img src="@Url.Content("~/Images/Picture/" + Model.SignatureFileName)" alt="Signature" style="max-width: 150px; max-height: 150px; margin-left:150px; " />
                        }
                        else
                        {
                            <span>No signature</span>
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
