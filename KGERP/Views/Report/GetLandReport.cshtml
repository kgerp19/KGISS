@model KGERP.Data.CustomModel.ReportCustomModel
@{
    ViewBag.Title = "GetLandReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Your existing HTML content -->



    @using (Html.BeginForm("GetLandReport", "Report", FormMethod.Post, new { id = "balanceSheetReportformId", @class = "formValidator", @target = "_blank", @enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Companies, "Select Company:")
                    @Html.DropDownListFor(model => model.CompaniesId, new SelectList(Model.Companies, "Value", "Text", 0), "-- Select Company --", new { @class = "form-control" })
                </div>


            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.LandUser, "Select Land User:")
                    @Html.DropDownListFor(model => model.LandUserId, new SelectList(Model.LandUser, "Value", "Text"), "-- Select Land User --", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.ProjectList2, "Select Project:")
                    @Html.DropDownListFor(model => model.Project2Id, new SelectList(Model.ProjectList2, "Value", "Text"), "-- Select Project --", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.DisputedId, "Select Disputed Item:")
                    @Html.DropDownListFor(model => model.DisputedId, new SelectList(Model.DisputedLisr, "Value", "Text"), "-- Select Disputed Item --", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.LandReceiverId, "Select Land Receiver:")
                    @Html.DropDownListFor(model => model.LandReceiverId, new SelectList(Model.LandReceiver, "Value", "Text"), "-- Select Land Receiver --", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6">
                <label for="options">Choose Dag No:</label>
                <div class="form-group ">
                    <select class="form-control" id="options" name="DagNo">
                        <option value="CS Dag">CS Dag</option>
                        <option value="BS Dag">BS Dag</option>
                        <option value="SA Dag">SA Dag</option>
                        <option value="RS Dag">RS Dag</option>
                    </select>
                </div>
            </div>
         

        </div>

        <div class="box-footer text-center">

            <div class="col-md-1 ">
                <select class="pull-right text-center" style="color:#ffffff; background-color:#dd4b39;height:34px;font-size:15px;width:100%;" name="ReportType" id="ReportType">
                    <option value="PDF">PDF</option>
                    <option value="EXCEL">EXCEL</option>
                    <option value="WORD">WORD</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="submit" name="EXPORT" value="EXPORT" id="submitButton" class="btn btn-success pull-right" style="width:100%" formtarget="_blank" />


            </div>

        </div>
    }

<script>
   
</script>
