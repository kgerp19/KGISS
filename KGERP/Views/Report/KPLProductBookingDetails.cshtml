@model KGERP.Data.CustomModel.ReportCustomModel


<style type="text/css">

    input, select, textarea {
        max-width: 100%;
    }
</style>
<section class="content-header">
    <h1>
        KPL Updated Booking Status
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">KPL Updated Booking Status</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("KPLProductBookingDetails", "Report", FormMethod.Post, new { id = "AccountingMovementformId", @class = "formValidator", @target = "_blank", @enctype = "multipart/form-data" }))
            {
                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="box-danger">

                        <!-- /.box-header -->
                        <div class="box-body">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.CompanyId, new { @id = "CompanyId" })
                            @Html.HiddenFor(model => model.ReportName)

                            <div class="row">
                                <div class="col-md-4"></div>
                                <div class="col-md-2">
                                    <select class="pull-right" style="margin-top: 22px; color: #ffffff; background-color: #dd4b39; height: 34px; font-size: 15px; width: 100%;" name="ReportType" id="ReportType">
                                        <option value="PDF">PDF</option>
                                        @*<option value="EXCEL">EXCEL</option>
                                        <option value="WORD">WORD</option>*@
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input type="submit" name="EXPORT" value="EXPORT" class="btn btn-success pull-right" style="width: 100%; margin-top: 22px;" formtarget="_blank" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    <script>
    </script>
}





