@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script>
        const disableRemove = () => {
            const $element = $("#Remarks");
            if ($element.is("[disabled]")) {
                $element.removeAttr("disabled");
            } else {
                $element.attr("disabled", "disabled");
            }
        }
        $(document).ready(function () {
            if (@Model.CompanyId== 0) {
                return false;
            }
                var companyId = @Model.CompanyId;
                $("#sowData").empty();
                console.log(companyId);
                $.ajax({
                    type: "GET",
                    url: "/FoodBill/GetAllEmployeeinfoForFine",
                    datatype: "Json",
                    data: { companyId: companyId },
                    success: function (data) {
                        console.log("data", data);
                        var tag = '';
                        $.each(data, function (key, item) {
                            tag += '<tr id="' + key + '">';
                            tag += '<td> ' + (key + 1) + '</td>';
                            tag += '<td> <input type="hidden" id="' + key + item.Id + '" name="FineDeductionDetalies[' + key + '].EmployeeId" value="' + item.Id + '"/> ' + item.EmployeeId + '</td>';
                            tag += '<td> ' + item.Name + '</td>';
                            tag += '<td> <input id="' + key + item.FineDeductionBil + '" name="FineDeductionDetalies[' + key + '].Amount" value="' + item.FineDeductionBil + '"/></td>';
                            tag += '</tr>';
                        })
                        $('#sowData').html(tag);
                    }
                });

        })

        $("#CompanyId").change(function () {
            var companyId = $("#CompanyId option:selected").val();
            $("#sowData").empty();
            console.log(companyId);
            $.ajax({
                type: "GET",
                url: "/FoodBill/GetAllEmployeeinfoForFine",
                datatype: "Json",
                data: { companyId: companyId },
                success: function (data) {
                    console.log("data", data);
                    var tag = '';
                    $.each(data, function (key, item) {
                        tag += '<tr id="' + key + '">';
                        tag += '<td> ' + (key + 1) + '</td>';
                        tag += '<td> <input type="hidden" id="' + key + item.Id + '" name="FineDeductionDetalies[' + key + '].EmployeeId" value="' + item.Id + '"/> ' + item.EmployeeId + '</td>';
                        tag += '<td> ' + item.Name + '</td>';
                        tag += '<td> <input id="' + key + item.FineDeductionBil + '" name="FineDeductionDetalies[' + key + '].Amount" value="' + item.FineDeductionBil + '"/></td>';
                        tag += '</tr>';
                    })
                    $('#sowData').html(tag);
                }
            });
        });
       
        function filterEmployeeList(searchTerm) {
           
            $('#sowData tr').each(function () {
             
                if ($(this).text().toLowerCase().includes(searchTerm.toLowerCase())) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

 
        $("#searchInput").on('input', function () {
          
            var searchTerm = $(this).val();
            filterEmployeeList(searchTerm);
        });

    </script>

}

