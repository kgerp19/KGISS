@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script>
        document.getElementById('saveBtn').addEventListener('click', function () {
            uploadFile();
        });


        $(document).ready(function () {
          
                var companyId = @Model.CompanyId;
                $("#sowData").empty();
                console.log(companyId);
                $.ajax({
                    type: "GET",
                    url: "/PRoll_SpecialAddition/GetEmployeeinfo",
                    datatype: "Json",
                    data: { companyId: companyId },
                    success: function (data) {
                        console.log("data", data);
                        var tag = '';
                        $.each(data, function (key, item) {
                            tag += '<tr id="' + key + '">';
                            tag += '<td> ' + (key + 1) + '</td>';
                            tag += '<td> <input type="hidden" id="' + key + item.Id + '" name="SpecialAditionDetaliesListDetalies[' + key + '].EmployeeId" value="' + item.Id + '"/> ' + item.EmployeeId + '</td>';
                            tag += '<td> ' + item.Name + '</td>';
                            tag += '<td> <input class="form-control form-control-sm" id="' + key + item.specialAddition + '" name="SpecialAditionDetaliesListDetalies[' + key + '].Amount" value="' + item.specialAddition + '"/></td>';
                            tag += '<td> <input class="form-control form-control-sm" id="Remark"  name="SpecialAditionDetaliesListDetalies[' + key + '].Remark" /></td>';
                            tag += '</tr>';
                        })
                        $('#sowData').html(tag);
                    }
                });

        })

        $("#CompanyId").change(function () {
            loadMobileBillDetail();
        });
        $("#ddlMonth").change(function () {
            loadMobileBillDetail();
        });

        $("#Year").change(function () {
            loadMobileBillDetail();
        });

        function loadMobileBillDetail() {
            
            var month = $("#ddlMonth option:selected").val();
            var year = $("#Year option:selected").val();
            $("#sowData").empty();
            $.ajax({
                type: "GET",
                url: "/PRoll_SpecialAddition/GetEmployeeinfo",
                datatype: "Json",
                data: { companyId: @Model.CompanyId, year: year, month: month },
                success: function (data) {
                    console.log("data", data);
                    var tag = '';
                    $.each(data, function (key, item) {
                        tag += '<tr id="' + key + '">';
                        tag += '<td> ' + (key + 1) + '</td>';
                        tag += '<td> <input type="hidden" id="' + key + item.Id + '" name="SpecialAditionDetaliesListDetalies[' + key + '].EmployeeId" value="' + item.Id + '"/> ' + item.EmployeeId + '</td>';
                        tag += '<td> ' + item.Name + '</td>';
                        tag += '<td> <input class="form-control form-control-sm" id="' + key + item.specialAddition + '" name="SpecialAditionDetaliesListDetalies[' + key + '].Amount" value="' + item.specialAddition + '"/></td>';
                        tag += '<td> <input class="form-control form-control-sm"  id="Remark"  name="SpecialAditionDetaliesListDetalies[' + key + '].Remark" /></td>';
                        tag += '</tr>';
                    })
                    $('#sowData').html(tag);
                }
            });
        }

    </script>



