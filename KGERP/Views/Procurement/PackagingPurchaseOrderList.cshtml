                <a id="@item.PurchaseOrderId" onclick="makeSubmitble(@item.PurchaseOrderId)" class="linkPointer" data-toggle="modal" data-target="#submitProcurementPurchaseOrderModal" title="@statusTitle" data-placement="top">
