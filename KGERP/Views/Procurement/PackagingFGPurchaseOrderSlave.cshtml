                                        @Html.TextAreaFor(model => model.Description, new { id = "txtDescription", placeholder = "Description", @class = "form-control", rows = 2 })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>TDS Deduction(%)</label>
                                        @Html.TextBoxFor(model => model.TDSDeduction, new { id = "tdsDeduction", type = "number", step = "0.01", @class = "form-control", placeholder = "TDS Deduction", required = "Required" })
                                        @Html.ValidationMessageFor(model => model.TDSDeduction, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Terms & Condition Type</label>
                                        @Html.DropDownListFor(model => model.TermsConditionTypeId, new SelectList(Model.TermNCondition, "Value", "Text"), "---Select---", new { @class = "dropdownsize form-control", @id = "termsAndConditionType", @onchange = "loadTermAndCondition()" })
                                    </div>
                                </div>
                            </div>                           
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Terms & Condition</label>
                                     @Html.TextAreaFor(model => model.TermAndCondition, new { id = "summernote", placeholder = "Terms and Condition", @class = "summernote form-control", rows = 1 })
                                    @Html.ValidationMessageFor(model => model.TermAndCondition, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }

                        @if (Model.Status == 0)
                        {
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group" style="padding:0px">
                                        <label for="message-text" class="col-form-label">Raw Item:</label>

                                        @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @autocomplete = "on", @class = "form-control", @name = "Product Name", @id = "txtProductName" } })

                                        @Html.HiddenFor(model => model.Common_ProductFK, new { id = "ddlRProductFK" })
                                        @Html.ValidationMessageFor(model => model.Common_ProductFK, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Purchasing Qty</label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.PurchaseQuantity, new { id = "txtPurchaseQuantity", @class = "form-control", @style = "width:100%;border:1px black solid", placeholder = "Purchase Quantity", required = "Required" })
                                            @Html.ValidationMessageFor(model => model.PurchaseQuantity, "", new { @class = "text-danger" })

                                            <div class="input-group-addon">
                                                <span class="txtUnitName"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Unit Price</label>
                                        @Html.TextBoxFor(model => model.PurchasingPrice, new { id = "txtPurchasingPrice", type = "number",  @class = "form-control", @style = "width:100%;border:1px black solid", placeholder = "Purchasing Price", required = "Required" })
                                        @Html.ValidationMessageFor(model => model.PurchasingPrice, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label>Vat(%)</label>
                                        @Html.TextBoxFor(model => model.VATAddition, new { id = "vatAddition", type = "number", @class = "form-control", @style = "width:100%;border:1px black solid", placeholder = "Vat", required = "Required" })
                                        @Html.ValidationMessageFor(model => model.VATAddition, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Total Price</label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.PurchasingPrice, new { id = "Totalprice", type = "number", step = "0.01", @class = "form-control", @style = "width:100%;border:1px black solid", placeholder = "Purchasing Price", required = "Required" })

                                            @Html.ValidationMessageFor(model => model.PurchasingPrice, "", new { @class = "text-danger" })

                                            @if (Model.Currencyname == null)
                                            {

                                                <div class="input-group-addon">
                                                    <span id="normalCurency" class="">BDT</span>
                                                    <span id="curenccyy" class=""></span>
                                                </div>
                                            }
                                            else
                                            { <div class="input-group-addon">
                                                    <span id="curenccyy" class="">@Model.Currencyname</span>
                                                </div>

                                            }
                                        </div>
                                    </div>
                                </div>




                            </div>
                        }


                    </div>

                        @if (Model.Status == 0)
                        {
                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-8">

                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <button type="submit" id="poCreateBtn" class="btn btn-primary btn-block">
                                            <i class='fa fa-plus'></i>
                                            @if (Model.PurchaseOrderId > 0)
                                            {
                                                <span>Add Item In PO</span>
                                            }
                                            else
                                            {
                                                <span>Create PO</span>
                                            }
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
