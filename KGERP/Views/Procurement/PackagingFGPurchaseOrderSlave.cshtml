                                    <th>:</th>
                                    <td>@Model.EmployeeMobile</td>

                                </tr>

                                <tr>
                                    <th>Supplier</th>
                                    <th>:</th>
                                    <td>@Model.SupplierName</td>
                                    <th>Code</th>
                                    <th>:</th>
                                    <td>@Model.Code</td>
                                    <th>Propietor</th>
                                    <th>:</th>
                                    <td>@Model.SupplierPropietor</td>
                                </tr>
