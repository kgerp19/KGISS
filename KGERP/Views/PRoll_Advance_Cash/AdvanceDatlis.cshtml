@model KGERP.Service.HR_Pay_Roll_Service.PRoll_AdvanceCash.PRoll_AdvanceViewModel
@using KGERP.Utility
@{
    ViewBag.Title = "AdvanceDatlis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .bg-div {
        padding: 1.15rem 1.25rem;
        margin-bottom: 0;
        background-color: #3f51b51f;
        border-bottom: 0 solid rgba(0,0,0,.125);
    }

    .select2-container .select2-selection--single {
        width: 567px !important;
    }
</style>
<div class="bg-div ">
    <h4> <b> @Model.CompanyName Advance Detalis </b> </h4>
</div>


<section class="content-header mt-3">
    <div class="">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <table class="table">
                        <tr>
                            <th style="width:18%">
                                Company Name
                            </th>
                            <th style="width:2%">:</th>
                            <td style="width:30%">
                                @Model.CompanyName
                            </td>
                            <th style="width:18%"> Created Date</th>
                            <th style="width:2%">:</th>
                            <td style="width:30%">
                                @Model.CreatedDate.ToShortDateString()
                            </td>
                        </tr>
                        <tr>
                            <th style="width:18%">
                                No Of Installment
                            </th>
                            <th style="width:2%">:</th>
                            <td style="width:30%">
                                @Model.NoOfInstallment
                            </td>
                            <th style="width:18%"> Total Amount</th>
                            <th style="width:2%">:</th>
                            <td style="width:30%">
                                @Model.TotalAmount
                            </td>
                        </tr>
                    </table>
                </div>
                <div style="justify-content: space-between !important; display: flex;">
                    <h3 class="mt-2"> Installment List</h3>
                    @*<div>
                        <button type="button" class="btn btn-primary">
                            Add New
                        </button>
                    </div>*@

                </div>

                <div class="progress" style="height: 3px;">
                    <div class="progress-bar" role="progressbar" style="width: 13%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

                <table class="table table-bordered table-sm mt-4">
                    <thead>
                        <tr style=" background-color: #fff2e0;">
                            <th>SL</th>
                            <th> Month </th>
                            <th>Year</th>
                            <th> Amount </th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int sl = 1; }
                        @foreach (var item in Model.models)
                        {
                            <tr>
                          
                                <th>@(++sl) </th>
                                <th> @((MonthList)item.PaymenyMonth) </th>
                                <th> @item.PaymenyYear </th>
                                <th> @item.Amount </th>
                                <th class="text-center">
                                    <a href="/PRoll_Advance_Cash/Delete?id=@item.AdvanceDetailId" class="btn btn-danger btn-xs">
                                        Delete
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>