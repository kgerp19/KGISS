                if (year === currentYear) {
                    option.attr('selected', 'selected');
                }
                dropdown.append(option);
            }
        }
        function LoadFiscalYear(numberOfYearsBefore = 2, numberOfYearsAfter = 5) {
            var currentYear = new Date().getFullYear();
            if (new Date().getMonth() < 7) {
                currentYear--;
            }
            var startYear = currentYear - numberOfYearsBefore;
            var endYear = currentYear + numberOfYearsAfter;
            var dropdown = $('#Year');
            dropdown.empty();
            dropdown.append($('<option></option>').text('Select Year'));
            for (var year = startYear; year <= endYear; year++) {
                var textValue = year + "-" + (year + 1);
                var option = $('<option></option>').val(year + 1).text(textValue);
                if (year === currentYear) {
                    option.attr('selected', 'selected');
                }
                dropdown.append(option);
            }
        }
        function convertNumberToWords(amount) {
            var words = new Array();
            words[0] = '';
            words[1] = 'one';
            words[2] = 'two';
            words[3] = 'three';
            words[4] = 'four';
            words[5] = 'five';
            words[6] = 'six';
            words[7] = 'seven';
            words[8] = 'eight';
            words[9] = 'nine';
            words[10] = 'ten';
            words[11] = 'eleven';
            words[12] = 'twelve';
            words[13] = 'thirteen';
            words[14] = 'fourteen';
            words[15] = 'fifteen';
            words[16] = 'sixteen';
            words[17] = 'seventeen';
            words[18] = 'eighteen';
            words[19] = 'nineteen';
            words[20] = 'twenty';
            words[30] = 'thirty';
            words[40] = 'fourty';
            words[50] = 'fifty';
            words[60] = 'sixty';
            words[70] = 'seventy';
            words[80] = 'eighty';
            words[90] = 'ninety';

            function getWord(num) {
                if (num < 20) {
                    return words[num];
                } else if (num < 100) {
                    return words[Math.floor(num / 10) * 10] + (num % 10 != 0 ? ' ' + words[num % 10] : '');
                } else {
                    return words[Math.floor(num / 100)] + ' hundred ' + (num % 100 != 0 ? getWord(num % 100) : '');
                }
            }

            function capitalizeWords(string) {
                return string.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
            }

            function getIndianNumbering(num) {
                let output = '';

                if (num >= 10000000) {
                    output += getWord(Math.floor(num / 10000000)) + ' crore ';
                    num = num % 10000000;
                }
                if (num >= 100000) {
                    output += getWord(Math.floor(num / 100000)) + ' lakh ';
                    num = num % 100000;
                }
                if (num >= 1000) {
                    output += getWord(Math.floor(num / 1000)) + ' thousand ';
                    num = num % 1000;
                }
                if (num > 0) {
                    output += getWord(num);
                }

                return capitalizeWords(output.trim());
            }

            return getIndianNumbering(parseInt(amount));
        }

