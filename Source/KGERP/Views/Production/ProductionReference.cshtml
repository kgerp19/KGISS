@section scripts {

    <script type="text/javascript">
        function makeProdReferenceSubmitable(rowId) {
            $("#submitProductionIdId").val(rowId)
            $('#submitCompanyFK').val("@Model.CompanyFK");
            $('#submitActionId').val(10);
            $('#referenceDate').val("@Model.ReferenceDate");
        }


        function makeFactoryExDeletale(rowId) {
            $("#hidDeleteProductionDetailID").val(rowId)
            $('#deleteCompanyFK').val("@Model.CompanyFK");
            $('#deleteProductionId').val("@Model.ProductionId");
            $('#deleteActionId').val(3);

        }

        function makeVoucher(rowId) {
            $("#hidVoucherProductionDetailID").val(rowId)
            $('#voucherCompanyFK').val("@Model.CompanyFK");
            $('#voucherProductionId').val("@Model.ProductionId");
            $('#voucherActionId').val(12);

        }

        function makeFinishItemDeletale(rowId) {
            $("#deleteProductionItemID").val(rowId)
            $('#deleteProdReferenceSlaveCompanyFK').val("@Model.CompanyFK");
            $('#deleteProductionIdId').val("@Model.ProductionId");
            $('#deleteProdReferenceSlaveActionId').val(3);

