@model KGERP.Service.Implementation.Production.VMProdReferenceSlave
@using KGERP.Utility;


@{
    ViewData["Title"] = "Production Process";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int sl2 = 0;
    int sl3 = 0;


    string hiddens = Model.ProductionId > 0 ? "" : "none";
    decimal? GrossExpensesTotal = 0;
    decimal? totalQuantity = 0;
    decimal? costingPrice = 0;
    decimal? GrossTotal = 0;
    if (Model.DataListSlave != null && Model.DataListSlave.Count() > 0)
    {
        GrossExpensesTotal = Model.DataListSlave.Sum(x => x.FectoryExpensesAmount);
    }
    if (Model.FinishDataListSlave != null && Model.FinishDataListSlave.Count() > 0)
    {

        totalQuantity = Model.FinishDataListSlave.Sum(x => x.Quantity);
        costingPrice = GrossExpensesTotal / totalQuantity;
        GrossTotal = totalQuantity * costingPrice;
        
    }


}

<style type="text/css">

    input, select, textarea {
        max-width: 100%;
    }
</style>

<section class="content-header">
    <h1>
        @if (Model.ProductionId > 0)
        {
            <span>
                Production Process History of:
                <a target="_blank" href="~/Report/GCCLProductionReport?companyId=@Model.CompanyFK&prodReferenceId=@Model.ProdReferenceId&reportName=GCCLProductionReports">@Model.ReferenceNo</a>
            </span>
        }
        else
        {
            <span>
                Production Process : @DateTime.Today.ToString("dd-MM-yyyy")
            </span>
        }


    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Production Process</li>
    </ol>
</section>
