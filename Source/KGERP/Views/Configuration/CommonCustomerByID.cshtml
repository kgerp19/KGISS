@using KG.Core.Services;

@model KGERP.Service.Configuration.VMCommonSupplier
@{
    Layout = null;
    decimal totalPrice = 0m;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Supplier Details</title>
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/onsen/2.10.6/css/ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.4.8/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.4.8/css/skins/_all-skins.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <style>
       /* h4 {
            border-bottom: 2px solid black;
            display: inline;
        }
*/
        /*.footer {
            position: absolute;
            bottom: 0;
            left: 0;
            text-align: center;
        }*/

        .trclass {
            border: 1px solid #000;
            font-size: 12px;
            font-weight: 800;
            background-color: #C0C0C0;
            line-height: 20px;
        }

        #page {
            background-color: #fff;
            width: 900px;
            margin: 0px auto;
           /* padding: 0 30px;
            font-size: 13px;*/
        }



        @@media print {
            .trclass {
                background-color: #C0C0C0 !important;
                -webkit-print-color-adjust: exact;
                line-height: 20px;
            }

            body {
                margin-top: 5px;
            }
            /*body {
                margin: 1.6cm;
            }*/
            #haderTitle {
                color: white !important;
                background-color: black !important;
                font-weight: bold !important;
                border-radius: 25px;
                padding: 5px;
            }

            #haderTitleh3 {
                background-color: black !important;
                padding: 4px;
            }

            a[href]:after {
                content: none !important;
            }

            #print, #print * {
                display: none !important;
            }
        }
        /*div.divfooter {
                margin-top: 15px;
                bottom: 0;
                display: inherit;
            }*/
        /*#divfooter {
                display: block !important;
            }*/
        }
    </style>

    <script>
        function printDiv() {
            window.print();
        }
    </script>
</head>


<body>
    <span id="print" style="float: right; position: fixed;right: 0; vertical-align: top; display: inline-block;" onclick="printDiv()" class="btn btn-default">
        Print
    </span>
    <div id="page">
        <div class="container-fluid p-5 bg-light" style="max-width: 900px; margin: auto;">
            <!-- Profile Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Customer/Vendor Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <!-- Profile Image -->
                        <div class="col-md-4 text-center mb-3">
                            <img src="@Model.Imageurl" alt="Profile Image" class="img-fluid rounded-circle border" style="max-width: 150px;">
                        </div>
                        <!-- Profile Information -->
                        <div class="col-md-8">
                            <h4 class="text-primary">@Model.Name</h4>
                            <p><strong>Contact Person:</strong> @Model.ContactPerson</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Phone:</strong> @Model.Phone</p>
                            <p><strong>Address:</strong> @Model.Address</p>
                            <p><strong>Zone:</strong> @Model.ZoneName</p>
                            <p><strong>Division:</strong> @Model.Division</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Details Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">General Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Column 1 -->
                        <div class="col-md-6">
                            <p><strong>Customer Type:</strong> @Model.CustomerTypeFk</p>
                            <p><strong>District:</strong> @Model.District</p>
                            <p><strong>Upazila:</strong> @Model.Upazila</p>
                            <p><strong>Country:</strong> @Model.Country</p>
                            <p><strong>Credit Limit:</strong> @Model.CreditLimit</p>
                        </div>
                        <!-- Column 2 -->
                        <div class="col-md-6">
                            <p><strong>NID:</strong> @Model.NID</p>
                            <p><strong>Vendor Type ID:</strong> @Model.VendorTypeId</p>
                            <p><strong>Code:</strong> @Model.Code</p>
                         
                      
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bank & License Information Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Bank & License Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Account Name:</strong> @Model.ACName</p>
                            <p><strong>Bank Name:</strong> @Model.BankName</p>
                            <p><strong>Branch Name:</strong> @Model.BranchName</p>
                            <p><strong>Account Number:</strong> @Model.ACNo</p>
                            <p><strong>Check Number:</strong> @Model.CheckNo</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Check Type:</strong> @Model.CheckTypeId</p>
                            <p><strong>Check Details ID:</strong> @Model.CheckDetailId</p>
                            <p><strong>Trade License:</strong> <a href="@Model.TradeLicenceUrl" target="_blank">View</a></p>
                            <p><strong>Sale License:</strong> <a href="@Model.SaleLiUrl" target="_blank">View</a></p>
                            <p><strong>Dealer License:</strong> <a href="@Model.DelerLiUrl" target="_blank">View</a></p>
                            <p><strong>TIN Certificate:</strong> <a href="@Model.TinUrl" target="_blank">View</a></p>
                            <p><strong>Bank Check Image:</strong> <a href="@Model.BankChkUrl" target="_blank">View</a></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Remarks Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Remarks</h4>
                </div>
                <div class="card-body">
                    <p>@Model.Remarks</p>
                </div>
            </div>
        </div>




</div>

</body>


</html>




