@model List<KGERP.Service.Implementation.General_Requisition.ViewModels.ERequisitionVM>
@{
    int i = 1;
}
@if (Model != null && Model.Any())
{
    <div class="table-responsive col-md-12  text-nowrap">
        <table id="KgErpDataTable" class="table table-responsive-md table-striped table-hover">
            <thead>
                <tr>
                    <th>SL</th>
                    <th>From</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Date/th>
                    <th>Attachemnt</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.DesignationName</td>
                        <td>@item.RequisitionDate.ToString("dd-MM-yyyy)"</td>
                        <td>@item.AttachmentString</td>
                        <td>
                            <a onclick="makeEditble(@item.Id)" class="linkPointer" title="Edit"><i class="fa fa-edit" aria-hidden="true"></i></a>

                            <a onclick="makeDeletable(@item.Id)" class="linkPointer" data-toggle="modal" data-target="#deleteModal" title="Delete" data-placement="top"><i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
