@using KGERP.Utility
@model KGERP.Service.ServiceModel.DashBoardViewModel
@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<style>
    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        }

        .card h2 {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .card p {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .card a {
            font-weight: 500;
            transition: color 0.2s;
        }

            .card a:hover {
                color: #065f46; /* Slight dark green for hover */
            }
</style>
<div class="bg-gray-50">


    <div class="container mx-auto px-6 py-10">

        <div class="text-center mb-12">
            @*<img src=@CompanyInfo.ProjectLogoUrl alt="ISS Logo" class="mx-auto mb-4" />*@
            <h1 class="text-5xl font-bold text-gray-900">Welcome To @Common.GetCompanyName()</h1>

        </div>
        @{
            if (Model.CompanyId == 2)
            {
                <div style="/* background-color: #f8d7da; */color: red;text-align: center;border: 2px solid red;padding: 10px;border-radius: 5px;margin: 10px 0;font-weight: bold;">
                    <strong>Notice:</strong> Your software license will expire on <strong>25/05/2025</strong> due to non-payment.
                </div>
            }
        }
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Customers</h2>
                <p class="text-green-500">@Model.Totalvendor.ToString("F2")</p>
                <a href="~/Collection/CommonCustomerList?companyId=" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Today's Sale</h2>
                <p class="text-green-500">@Model.TotalSale.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Today's Sale Amount</h2>
                <p class="text-green-500">@Model.TotalSaleAmmount.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Today's Collection</h2>
                <p class="text-green-500">@Model.Collection.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 mt-8">
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Suppliers</h2>
                <p class="text-red-500">@Model.Totalsupplier.ToString("F2")</p>
                <a href="#" class="text-red-600 hover:text-red-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Today's Purchase</h2>
                <p class="text-red-500">@Model.TotalPurchase.ToString("F2")</p>
                <a href="#" class="text-red-600 hover:text-red-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Total Purcase Ammount</h2>
                <p class="text-red-500">@Model.TotalPurcaseAmmount.ToString("F2")</p>
                <a href="#" class="text-red-600 hover:text-red-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700"> Last Month Payment</h2>
                <p class="text-red-500">@Model.TotalmonthPurchaseAmmount.ToString("F2")</p>
                <a href="#" class="text-red-600 hover:text-red-800 mt-4 inline-block">More info &gt;</a>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 mt-8">
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Last Month Sale Amount</h2>
                <p class="text-blue-900">@Model.TotalMonthSeleAmmount.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Last Month Collection</h2>
                <p class="text-blue-900">@Model.MonthSaleCollection.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Today's Payment</h2>
                <p class="text-blue-900">@Model.Payment.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
            <div class="card bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <h2 class="text-gray-700">Last Month Payment</h2>
                <p class="text-blue-900">@Model.MonthPurchasePayment.ToString("F2")</p>
                <a href="#" class="text-green-600 hover:text-green-800 mt-4 inline-block">More info &gt;</a>
            </div>
        </div>

    </div>
</div>







