                        }
                    </div>
                    <div class="box-footer">
                        @if (Model.IssueMasterId > 0)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <a style="width:100%" class="col-md-4 btn btn-warning" target="_blank" href="~/Report/PackagingPurchaseOrderReports?purchaseOrderId=@Model.IssueMasterId&companyId=@Model.CompanyFK&reportName=ISSPurchaseOrderReports">Purchase Order Print</a>
