                                        </a>
                                    </div>*@



                                }
                                else
                                {
                                    <div class="col-md-6">


                                        <a id="@Model.IssueMasterId" onclick="makeSubmitble(@Model.IssueMasterId)" class="linkPointer btn btn-success" data-toggle="modal" style="width:100%" data-target="#submitProcurementPurchaseOrderModal" data-placement="top">

                                            <i>Submit</i>

                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
