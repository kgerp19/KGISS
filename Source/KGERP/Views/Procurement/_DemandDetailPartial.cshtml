@model KGERP.Services.Procurement.VmDemandItemService
@using KGERP.Data.Models

<div class="row">
    <div class="col-lg-12">
        @{
            
            if (Model.DemandItemList.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap">
                        <thead>
                                    <tr class="bg-success">
                                        <th>SL</th>

                                        <th>Finish Item</th>

                                        <th class="center">Quantity</th>

                                        <th class="center">
                                            Unit Price
                                        </th>
                                        <th>
                                            Unit Discount
                                        </th>
                                        <th>
                                            Cash Discount Percent
                                        </th>
                                        <th>
                                            Special Discount
                                        </th>
                                        <th>
                                            Total Amount
                                        </th>

                                    </tr>
                        </thead>
                        <tbody id="demandTbody">
                            @for (int i = 0; i < Model.DemandItemList.Count(); i++)
                            {
                            <tr>
                                <th>
                                    @Html.HiddenFor(model => model.DemandItemList[i].ProductId)
                                    @Html.HiddenFor(model => model.DemandItemList[i].DemandItemId)


                                   
                                    @(i + 1)
                                </th>


                                <td>
                                    @Html.DisplayFor(model => model.DemandItemList[i].ProductName)
                                </td>

                                <td>
                                    @Html.TextBoxFor(model => model.DemandItemList[i].ItemQuantity, new { id = "txtRequiredQuantity", Value = Model.DemandItemList[i].ItemQuantity, @class = "form-control" })

                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.DemandItemList[i].UnitPrice, new { id = "txtRequiredQuantity", Value = Model.DemandItemList[i].UnitPrice, @class = "form-control" })


                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.DemandItemList[i].ProductDiscountUnit, new { id = "txtRequiredQuantity", Value = Model.DemandItemList[i].ProductDiscountUnit, @class = "form-control" })

                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.DemandItemList[i].CashDiscountPercent, new { id = "txtRequiredQuantity", Value = Model.DemandItemList[i].CashDiscountPercent, @class = "form-control" })

                                </td>

                                <td>
                                    @Html.TextBoxFor(model => model.DemandItemList[i].SpecialDiscount, new { id = "txtRequiredQuantity", Value = Model.DemandItemList[i].SpecialDiscount, @class = "form-control" })

                                </td>

                                <td>
                                    @Html.TextBoxFor(model => model.DemandItemList[i].UnitPrice, new { id = "txtRequiredQuantity", Value = Model.DemandItemList[i].UnitPrice, @class = "form-control" })

                                </td>
                            </tr>
                            }
                        </tbody>
                        
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-8">

                    </div>
                    <div class="col-lg-4 col-md-4">
                        <button type="submit" id="poCreateBtn" onclick="PRFAddtoMaster()" class="btn btn-primary btn-block">
                            <i class='fa fa-plus'></i>
                            <span>Create New Invoice</span>
                        </button>

                    </div>
                </div>

            }
            else
            {
                <div class="col-md-12">
                    <div class="box box-success box-solid">

                        <!-- /.box-header -->
                        <div class="box-body">

                            <div class="form-group" style="text-align:center;">
                                <h3>
                                    There are no Item yet.
                                </h3>
                            </div>



                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            }
        }

    </div>
</div>

