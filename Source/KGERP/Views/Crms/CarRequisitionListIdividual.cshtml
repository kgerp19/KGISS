    <script>
        function deleteItem(id) {
            $.confirm({
                title: 'Are You Want sure to delete!',
                content: 'This will be permanenly delete',
                type: 'red',
                typeAnimated: true,
                buttons: {
                    tryAgain: {
                        text: 'Delete',
                        btnClass: 'btn-red',
                        action: function () {

                  $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteCarRequision", "Crms")",
                datatype: "Json",
                data: { id: id },
                success: function (data) {
                location.reload();

                }
                })

                }
                },
                close: function () {
                }
                }
                });
                }

    </script>

