@model KGERP.Data.CustomModel.ReportCustomModel
@{
    ViewBag.Title = "OutstandingAmountandCollactionReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("SalesReport", "Report", FormMethod.Post, new { id = "AccountingMovementformId", @class = "formValidator", @target = "_blank", @enctype = "multipart/form-data" }))
            {
                <h2>Sales Report</h2>
                <div class="col-md-4">
                    <div>
                        @Html.Label("Title", htmlAttributes: new { @class = "control-label" })
                        @Html.HiddenFor(x=>x.CompanyId)
                        @Html.DropDownListFor(model => model.SaleTitleId, new SelectList(Model.SaleTitle, "Value", "Text"), "Select Title", new { @class = "form-control" })
                    </div>
                    <div class="box-footer">
                        <div class="col-md-1">
                        </div>
                        <div class="col-md-4">
                            <select class="pull-right" style="color:#ffffff; background-color:#dd4b39;height:34px;font-size:15px;width:100%;" name="ReportType" id="ReportType">
                                <option value="PDF">PDF</option>
                                <option value="EXCEL">EXCEL</option>
                                <option value="WORD">WORD</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <input type="submit" name="EXPORT" value="EXPORT" class="btn btn-success pull-right" style="width:100%" formtarget="_blank" />
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>

                </div>

            }

        </div>

    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")



    <script>
        $(function () {



        });

    </script>
}

