@model KGERP.Service.ServiceModel.SeedProcessingModel.MaterialReceiveDetailsWithProductVM

<div class="row">
    <div class="col-lg-12">
        @{
            int ListCount = Model.DataListPro.Count();

            if (ListCount > 0)
            {
                <div class="table-responsive">

                    <table class="table table-bordered text-nowrap">

                        <thead>
                                    <tr class="bg-success">
                                        <th>SL</th>
                                        <th>Raw Material</th>
                                        <th>Stockin Qty</th>
                                        <th>Stockin Rate</th>
                                        <th>Processing Cost</th>
                                    </tr>
                        </thead>
                        <tbody id="tblBodyPar">
                            @for (int i = 0; i < Model.DataListPro.Count(); i++)
                            {
                            <tr>
                                <th>

                                    @Html.HiddenFor(model => model.DataListPro[i].ProductId)
                                    @Html.HiddenFor(model => model.DataListPro[i].MaterialReceiveDetailId)

                                    @(i + 1)
                                </th>

                                <td>
                                    @Html.DisplayFor(model => model.DataListPro[i].ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.DataListPro[i].StockInQty)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.DataListPro[i].UnitPrice)
                                </td>


                                <td>
                                    @Html.TextBoxFor(model => model.DataListPro[i].Amount, new { id = "txtAmount", @class = "form-control", type = "number" })

                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-8">

                    </div>
                </div>

            }
            else
            {
                <div class="col-md-12">
                    <div class="box box-success box-solid">

                        <!-- /.box-header -->
                        <div class="box-body">

                            <div class="form-group" style="text-align:center;">
                                <h3>
                                    There are no Item yet.
                                </h3>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            }
        }

    </div>
</div>

