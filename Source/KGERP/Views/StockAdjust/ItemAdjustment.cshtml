                                        <td width="1%">:</td>
                                        <th width="34%">@Model.InvoiceNo</th>
                                        <td width="15%"><b>Delivery Date</b></td>
                                        <td width="1%">:</td>
                                        <td width="34%">@Model.AdjustDate.ToString("dd-MM-yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th>Remarks</th>
                                        <th>:</th>
                                        <td>@Model.Remarks</td>
                                        <th>Created By</th>
